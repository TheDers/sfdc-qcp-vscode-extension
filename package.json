{
  "name": "sfdc-qcp-vscode-extension",
  "displayName": "sfdc-qcp-vscode-extension",
  "description": "Salesforce CPQ Quote Calculator Plugin VSCode Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.qcp/qcp-config.json",
    "onCommand:extension.init",
    "onCommand:extension.pullAll",
    "onCommand:extension.push",
    "onCommand:extension.pushAll"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.init",
        "title": "Initialize Project",
        "category": "SFDC QCP"
      },
      {
        "command": "extension.pull",
        "title": "Pull specified QCP file from SFDC",
        "category": "SFDC QCP"
      },
      {
        "command": "extension.pullAll",
        "title": "Pull all QCP files from Salesforce",
        "category": "SFDC QCP"
      },
      {
        "command": "extension.push",
        "title": "Push file to Salesforce",
        "category": "SFDC QCP"
      },
      {
        "command": "extension.pushAll",
        "title": "Push all files to Salesforce",
        "category": "SFDC QCP"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.4",
    "fs-extra": "^7.0.1",
    "jsforce": "^1.9.1"
  }
}